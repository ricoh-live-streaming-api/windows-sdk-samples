<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <log4net>
        <appender name="main" type="log4net.Appender.RollingFileAppender" >
            <File type="log4net.Util.PatternString" value="%property{PersistentDataPath}/logs/main.log" />
            <StaticLogFileName value="false" />
            <RollingStyle value="Size" />
            <AppendToFile value="true" />
            <MaximumFileSize value="512MB" />
            <MaxSizeRollBackups value="4" />
            <layout type="log4net.Layout.PatternLayout">
                <ConversionPattern value="%date [%thread] [%-5level] (%class#%method) - %message%n" />
            </layout>
        </appender>
        <root>
            <level value="Debug" />
            <appender-ref ref="main" />
        </root>
    </log4net>
</configuration>